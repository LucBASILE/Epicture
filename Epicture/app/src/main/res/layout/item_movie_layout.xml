<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/linearLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="440dp" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:id="@+id/movieAvatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginBottom="35dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/movieTitle" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            tools:context="com.appsdeveloperblog.kotlinexample4.LoadGifFromURLUsingGlide"
            android:layout_marginStart="28dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>

    <TextView
            android:id="@+id/movieTitle"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/movieAvatar" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>

</android.support.constraint.ConstraintLayout>