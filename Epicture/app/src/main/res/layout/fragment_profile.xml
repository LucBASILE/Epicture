<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ProfileFragment" tools:layout_editor_absoluteY="81dp"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cover" android:src="@android:color/darker_gray"
            android:scaleType="fitXY"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:src="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@color/Image_background"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textSize="14sp"
            android:id="@+id/username"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/cover"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/cover"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintTop_toTopOf="@+id/cover" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.096"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="67dp"
            android:layout_height="70dp" tools:src="@tools:sample/avatars"
            android:id="@+id/avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cover" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reputation"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="12sp" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/created"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/cover" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.501" android:textSize="12sp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="384dp"
            android:layout_height="408dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:id="@+id/post_list"/>

</android.support.constraint.ConstraintLayout>